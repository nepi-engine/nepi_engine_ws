alias nepihome="
cd ${NEPI_HOME}"

function nepienable(){
    . ${NEPI_DOCKER_CONFIG}/nepi_docker_stop.sh
    wait
    sleep 3
    sudo systemctl enable nepi_docker
}
export -f nepienable

function nepidisable(){
    . ${NEPI_DOCKER_CONFIG}/nepi_docker_stop.sh
    wait
    sleep 3
    sudo systemctl disable nepi_docker
}
export -f nepidisable

# NEPI stop and start shortcuts
function nepistop(){
  . ${NEPI_DOCKER_CONFIG}/nepi_docker_stop.sh
}
export -f nepistop

function nepistart(){
    . ${NEPI_DOCKER_CONFIG}/nepi_docker_start.sh
}
export -f nepistart

function nepilogin(){
  . ${NEPI_DOCKER_CONFIG}/nepi_docker_login.sh   
}
export -f nepilogin



function nepicommit(){
  . ${NEPI_DOCKER_CONFIG}/nepi_docker_commit.sh
}
export -f nepicommit



function nepiswitch(){
  . ${NEPI_DOCKER_CONFIG}/nepi_docker_switch.sh
}
export -f nepiswitch


function nepiimport(){
  . ${NEPI_DOCKER_CONFIG}/nepi_docker_import.sh
}
export -f nepiimport


function nepiexport(){
  . ${NEPI_DOCKER_CONFIG}/nepi_docker_export.sh
}
export -f nepiexport




HELPN="${HELPN}
################################
## NEPI Docker Functions ##
