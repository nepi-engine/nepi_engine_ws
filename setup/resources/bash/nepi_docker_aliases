# This file contains nepi docker host system aliases and sources nepi bash utils

#echo "########################"
#echo "NEPI Docker Aliases"
#echo "########################"

export NEPI_CONFIG=${HOME}/.NEPI_CONFIG
source ${NEPI_CONFIG}


NEPI_UTILS_FILE=/home/${USER}/.nepi_bash_utils
source $NEPI_UTILS_FILE
UINFO="$(. ${NEPI_UTILS_FILE} && utilsn)"

########################
# Help Msg Initialization
#########################
HELPN=${UINFO}


#############################
# NEPI DOCKER FUNCTIONS
#############################


function create_tag(){
    refresh_nepi_config 
    wait
    SW_VERSION=$1
    HW_TYPE=$2
    HW_MODEL=$3
    
    TAG_VARIABLE=$4
    tag=${SW_VERSION}-${HW_TYPE}-${HW_MODEL}
    export TAG_VARIABLE="${tag,,}" # Convert to lowercase
    echo "$TAG_VARIABLE"
}
export -f create_tag

######################
# UPDATE NEPI DOCKER CONFIG
######################
function config_nepi(){
    #Run NEPI Docker Config Script
    . /home/${USER}/docker_config_setup.sh
}
export -f config_nepi

######################
# RUN_NEPI
######################
function run_nepi(){
    #Run NEPI in Normal Mode
    export IT_MODE=0
    export REMOVE_MODE=1
    . ${NEPI_DOCKER_CONFIG}/start_nepi_docker.sh
}
export -f run_nepi



######################
# COMMIT_NEPI
######################
function commit_nepi(){
    # Commit the Running Container
    if [[ ! -v NEPI_RUNNING ]]; then
        if [[ ( -v NEPI_RUNNING && "$NEPI_RUNNING" -eq 1 ) ]]; then
            echo "Stopping Running NEPI Docker Process ${NEPI_RUNNING_NAME}:${NEPI_RUNNING_TAG} ID:${NEPI_RUNNING_ID}"
            dcommit $NEPI_RUNNING_ID ${1}:${2}
        else
            echo "No Running NEPI Contatainer to Commit"
        fi
    else
        echo "Failed to Read NEPI Docker Config File"
        exit 1
    fi 
}
export -f commit_nepi

######################
# LOGIN_NEPI
######################
function login_nepi(){
  . ${NEPI_DOCKER_CONFIG}/docker_cfg/nepi_docker_login.sh   
}
export -f login_nepi

######################
# SWITCH_NEPI
######################
function switch_nepi(){
  . ${NEPI_DOCKER_CONFIG}/nepi_docker_switch.sh
}
export -f switch_nepi

######################
# IMPORT_NEPI
######################

function import_nepi(){
  . ${NEPI_DOCKER_CONFIG}/nepi_docker_import.sh
}
export -f import_nepi

######################
# EXPORT_NEPI
######################

function export_nepi(){
  . ${NEPI_DOCKER_CONFIG}/nepi_docker_export.sh
}
export -f ffile




###################################
# NEPI SSH Agent Config
###################################

CURRENT_DIR=$(pwd)

export NEPI_SSH_KEY_PATH=~/ssh_keys/nepi_engine_default_private_ssh_key

LOCALHOST_IP="127.0.0.1"
export NEPI_TARGET_IP=$LOCALHOST_IP
export NEPI_TARGET_USERNAME=$NEPI_USER
export NEPI_SSH_KEY=~/ssh_keys/nepi_engine_default_private_ssh_key
export NEPI_TARGET_SRC_DIR=${NEPI_STORAGE}/nepi_src # This is the default if unset

# Setup Connection Shortcuts
alias sshn="ssh -o StrictHostKeyChecking=no -i $NEPI_SSH_KEY_PATH nepi@nepi"
alias scpn="scp -o StrictHostKeyChecking=no -i $NEPI_SSH_KEY_PATH nepi@nepi"
alias sftpn="sftp -o StrictHostKeyChecking=no -i $NEPI_SSH_KEY_PATH nepi@nepi"


SSH_ENV="$HOME/.ssh/environment"

function run_ssh_env {
  . "${SSH_ENV}" > /dev/null
}

function start_ssh_agent {
  echo "Initializing new SSH agent..."
  ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
  echo "succeeded"
  chmod 600 "${SSH_ENV}"

  run_ssh_env;

  ssh-add ~/.ssh/id_rsa;
}

if [ -f "${SSH_ENV}" ]; then
  run_ssh_env;
  ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
    start_ssh_agent;
  }
else
  start_ssh_agent;
fi



###################################
###################################
